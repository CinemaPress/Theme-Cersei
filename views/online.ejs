<!DOCTYPE html>
<html lang="ru">
<head>

    <% include includes/head.ejs %>

</head>
<body>
<div class="kapla">

    <% include includes/header.ejs %>

    <div id="contenedor">
        <div class="contenido">

            <div class="box">

                <% include includes/header2.ejs %>

                <div class="box_item">

                    <% if (typeof slider == 'object' && slider.movies.length) { %>

                    <div class="slider_box s_home">
                        <div class="head_slider">
                            <div class="controles">
                                <a class="prev btn"><b class="icon-angle-left"></b></a>
                                <a class="play btn"><b class="icon-playback-play"></b></a>
                                <a class="next btn"><b class="icon-angle-right"></b></a>
                            </div>
                        </div>
                        <div class="owl-carousel owl-theme slider1">

                            <% slider.movies.forEach(function (movie) { %>

                            <div class="item">
                                <div class="imagens">
                                    <a href="<%- movie.url %>"><img src="<%- movie.poster %>" alt="<%- movie.title_ru %> (<%- movie.year %>) полный фильм онлайн" style="width: 100%; height: 100%;"/></a>
                                    <span class="imdb"><b><b class="icon-star"></b></b> <%- movie.rating/10 %></span>
                                </div>
                                <span class="ttps"><%- movie.title_ru %> (<%- movie.year %>)</span>
                                <span class="ytps"><%- movie.year %></span>
                            </div>

                            <% }); %>

                        </div>
                    </div>

                    <% } %>

                    <div style="clear: both;"></div>

                    <div id="player2">

                        <%- page.player %>

                    </div>

                    <div style="clear: both;"></div>

                    <div class="player_nav">
                        <ul>
                            <li>
                                <a href="<%- movie.url %>">
                                    О фильме
                                </a>
                            </li>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.online %>" class="selected">
                                    Онлайн
                                </a>
                            </li>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.download %>">
                                    Скачать
                                </a>
                            </li>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.trailer %>">
                                    Трейлер
                                </a>
                            </li>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.picture %>">
                                    Кадры
                                </a>
                            </li>
                            <li style="float: right; width: 22%; display: none;" class="watchLaterBlock">
                                <a href="javascript:void(0)" id="watchLater">
                                    Досмотреть позже
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div id="single">
                        <div class="post-ratings">
                            <div class="s_left">
                                <div id="uwee" class="sbox">
                                    <div class="imagen">
                                        <div class="fix">
                                            <span class="calidad2"><%- movie.genre %></span>
                                            <img src="<%- movie.poster %>" alt="<%- movie.title_ru %> полный фильм скачать"/>
                                        </div>
                                    </div>
                                    <div class="data">
                                        <h1><%- page.title %></h1>
                                        <span class="titulo_o"><%- movie.title_en %>&nbsp;&nbsp;&nbsp;&nbsp;<%- movie.premiere %></span>
                                        <p class="meta">
                                    <span>
                                        <%- movie.year_url %>
                                    </span>
                                            &nbsp;
                                            <i class="limpiar">
                                                <%- movie.genres_url %>
                                            </i>
                                        </p>
                                        <div class="imdb_r">
                                            <div class="a">
                                                <span><%- movie.imdb_rating/10 %></span>
                                            </div>
                                            <div class="b">
                                                <div class="bar">
                                                    <span style="width: <%- movie.imdb_rating %>%"></span>
                                                </div>
                                        <span class="dato">
                                            IMDb: <b><%- movie.imdb_rating/10 %>/10</b> <b><%- movie.imdb_vote %> голосов</b>
                                        </span>
                                            </div>
                                        </div>
                                        <div class="kp_r">
                                            <div class="a">
                                                <span><%- movie.kp_rating/10 %></span>
                                            </div>
                                            <div class="b">
                                                <div class="bar">
                                                    <span style="width: <%- movie.kp_rating %>%"></span>
                                                </div>
                                        <span class="dato">
                                            КиноПоиск: <b><%- movie.kp_rating/10 %>/10</b> <b><%- movie.kp_vote %> голосов</b>
                                        </span>
                                            </div>
                                        </div>
                                        <p class="meta_dd">
                                            <b class="icon-megaphone"></b>
                                            <%- movie.directors_url %>
                                        </p>
                                        <p class="meta_dd limpiar">
                                            <b class="icon-male"></b>
                                            <%- movie.actors_url %>
                                        </p>
                                        <p class="meta_dd">
                                            <b class="icon-flag"></b>
                                            <%- movie.countries_url %>
                                        </p>
                                    </div>

                                </div>

                                <% if (page.seo) { %>

                                <div class="sbox">
                                    <div class="entry-content">
                                        <%- page.seo %>
                                    </div>
                                </div>

                                <% } %>

                                <div class="sbox episodesListBlock" style="display: none;">
                                    <div class="entry-content">
                                        <h3><%- movie.title %> новые серии</h3>
                                        <div id="episodesList" data-id="<%- movie.kp_id %>"></div>
                                    </div>
                                </div>

                                <% if (page.comments) { %>

                                <div class="comentarios">
                                    <div id="comments" class="themeform">
                                        <%- page.comments %>
                                    </div>
                                </div>

                                <% } %>

                                <div class="sbox">
                                    <div class="entry-content">
                                        <% if (typeof movies == 'object') { for (var type in movies) { if (movies.hasOwnProperty(type)) { %>

                                        <% if (movies[type].length) { %>

                                        <% movies[type].forEach(function (category) { %>

                                        <div class="slider_box" style="margin-bottom: 25px;">
                                            <div class="head_slider">
                                                <h3><%- category.name %></h3>
                                                <div class="controles">
                                                    <a class="prev2 btn">
                                                        <b class="icon-angle-left"></b>
                                                    </a>
                                                    <a class="next2 btn">
                                                        <b class="icon-angle-right"></b>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="owl-carousel owl-theme slider2">

                                                <% if (category.movies.length) { %>

                                                <% category.movies.forEach(function (movie) { %>

                                                <div class="item">
                                                    <div class="imagens">
                                                        <a href="<%- movie.url %>"><img src="<%- movie.poster %>" alt="<%- movies.title_ru %>" style="width: 100%; height: 100%;"/>
                                                        </a>
                                                        <span class="imdb"><b><b class="icon-star"></b></b> <%- movie.rating/10 %></span>
                                                    </div>
                                                    <span class="ttps" title="<%- movie.title_ru %> (<%- movie.year %>)"><%- movie.title_ru %> смотреть</span>
                                                    <span class="ytps"><%- movie.year %></span>
                                                </div>

                                                <% }); %>

                                                <% } %>

                                            </div>
                                        </div>

                                        <% }); %>

                                        <% } %>

                                        <% } } } %>
                                    </div>
                                </div>

                            </div>
                            <div class="s_right">

                                <% include includes/right.ejs %>

                            </div>
                        </div>
                    </div>

                    <% include includes/footer.ejs %>

                </div>
            </div>

        </div>
    </div>
</div>
</body>
</html>