<div class="header">
    <div>
        <ul>
            <li class="page_item">
                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.movie %>">Фильмы</a>
            </li>
            <li class="page_item">
                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.serial %>">Сериалы</a>
            </li>
            <li class="page_item">
                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.mult %>">Мультфильмы</a>
            </li>
            <li class="page_item">
                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.anime %>">Аниме</a>
            </li>
            <li class="page_item">
                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.tv %>">Передачи</a>
            </li>
        </ul>
    </div>
    <div class="buscador">
        <form method="get" action="<%- page.protocol %><%- page.domain %>/<%- page.urls.search %>/title">
            <div class="imputo">
                <input class="buscar" type="text" placeholder="Поиск ..." name="q">
            </div>
        </form>
    </div>
</div>

<% if (typeof page.adv == 'object' && page.adv.top) { %>
<div style="clear: both;"></div>
<div style="text-align: center; margin: 10px auto">
    <%- page.adv.top %>
</div>
<div style="clear: both;"></div>
<% } %>